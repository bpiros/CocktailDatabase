<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cocktail_item">

    <ImageView
        android:id="@+id/cocktailImageView"
        android:layout_width="@dimen/height_cocktail_item_image"
        android:layout_marginTop="20dp"
        android:layout_height="@dimen/height_cocktail_item_image"
        android:background="@color/colorLightGrey"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="8dp"
        android:padding="25dp"
        android:src="@drawable/ic_glass_cocktail"
        android:tint="@color/colorWhite"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@id/cocktailImageView"
        app:layout_constraintLeft_toLeftOf="@id/cocktailImageView"
        app:layout_constraintRight_toRightOf="@id/cocktailImageView"
        app:layout_constraintTop_toTopOf="@id/cocktailImageView" />

    <View
        android:id="@+id/favouriteBackgroundImageView"
        android:layout_width="@dimen/size_favourite_icon"
        android:layout_height="@dimen/size_favourite_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bacground_favourite"
        android:elevation="8dp"
        app:layout_constraintRight_toRightOf="@id/cocktailImageView"
        app:layout_constraintTop_toTopOf="@id/cocktailImageView" />

    <ImageView
        android:id="@+id/favouriteImageView"
        android:layout_width="@dimen/size_favourite_icon"
        android:layout_height="@dimen/size_favourite_icon"
        android:elevation="8dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:tint="@color/colorFavourite"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@id/favouriteBackgroundImageView"
        app:layout_constraintLeft_toLeftOf="@id/favouriteBackgroundImageView"
        app:layout_constraintRight_toRightOf="@id/favouriteBackgroundImageView"
        app:layout_constraintTop_toTopOf="@id/favouriteBackgroundImageView" />


    <TextView
        android:id="@+id/cocktialTitleTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_cocktail_item_text"
        android:background="@color/colorWhite"
        android:elevation="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/cocktailImageView"
        app:layout_constraintRight_toRightOf="@id/cocktailImageView"
        app:layout_constraintTop_toBottomOf="@id/cocktailImageView"
        tools:text="margharita" />

</androidx.constraintlayout.widget.ConstraintLayout>